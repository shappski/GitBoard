generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String             @id @default(cuid())
  name            String?
  email           String?            @unique
  emailVerified   DateTime?
  image           String?
  gitlabId        Int?               @unique
  gitlabUsername  String?
  accounts        Account[]
  sessions        Session[]
  monitoredProjects MonitoredProject[]
  syncLogs        SyncLog[]
  createdAt       DateTime           @default(now())
  updatedAt       DateTime           @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model MonitoredProject {
  id               String         @id @default(cuid())
  userId           String
  gitlabProjectId  Int
  name             String
  nameWithNamespace String?
  webUrl           String
  lastSyncAt       DateTime?
  syncEnabled      Boolean        @default(true)

  user          User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  mergeRequests MergeRequest[]
  issues        Issue[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, gitlabProjectId])
  @@index([userId])
}

model MergeRequest {
  id               String   @id @default(cuid())
  projectId        String
  gitlabMrIid      Int
  gitlabMrId       Int
  title            String
  webUrl           String
  state            String
  authorName       String?
  authorUsername   String?
  authorAvatarUrl String?
  draft            Boolean  @default(false)
  sourceBranch     String?
  targetBranch     String?
  gitlabCreatedAt  DateTime
  gitlabUpdatedAt  DateTime
  pipelineStatus   String?
  labels           Json     @default("[]")
  reviewers        Json     @default("[]")

  project MonitoredProject @relation(fields: [projectId], references: [id], onDelete: Cascade)
  issues  IssueMergeRequest[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([projectId, gitlabMrIid])
  @@index([gitlabUpdatedAt])
  @@index([state])
}

model SyncLog {
  id        String   @id @default(cuid())
  userId    String
  status    String
  error     String?
  mrsFetched     Int @default(0)
  issuesFetched  Int @default(0)
  duration       Int @default(0)

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
}

model Issue {
  id               String   @id @default(cuid())
  projectId        String
  gitlabIssueIid   Int
  gitlabIssueId    Int
  title            String
  webUrl           String
  state            String
  authorName       String?
  authorUsername    String?
  authorAvatarUrl  String?
  labels           Json     @default("[]")
  assignees        Json     @default("[]")
  gitlabCreatedAt  DateTime
  gitlabUpdatedAt  DateTime

  project          MonitoredProject @relation(fields: [projectId], references: [id], onDelete: Cascade)
  mergeRequests    IssueMergeRequest[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([projectId, gitlabIssueIid])
  @@index([gitlabUpdatedAt])
  @@index([state])
}

model IssueMergeRequest {
  id             String @id @default(cuid())
  issueId        String
  mergeRequestId String

  issue          Issue        @relation(fields: [issueId], references: [id], onDelete: Cascade)
  mergeRequest   MergeRequest @relation(fields: [mergeRequestId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@unique([issueId, mergeRequestId])
  @@index([issueId])
  @@index([mergeRequestId])
}
